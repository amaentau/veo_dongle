{
  "name": "espa-tv-player",
  "version": "1.0.0",
  "description": "Raspberry Pi component for Espa-TV stream playback in Chromium",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "play": "node src/index.js",
    "help": "node src/index.js --help",
    "version": "node src/index.js --version",
    "wsl": "./run.sh",
    "wsl:dev": "./run.sh --dev",
    "setup": "./setup.sh",
    "setup:wsl": "./setup-wsl.sh",
    "setup:rpi": "./setup-rpi.sh",
    "install:deps": "npm install && npm audit fix",
    "clean": "rm -rf node_modules && npm install",
    "launch": "node launch-simple.js --system-chromium",
    "launch:simple": "node src/simple-launcher.js",
    "launch:headless": "node src/simple-launcher.js --headless",
    "test:hdmi": "node test-hdmi-provisioning.js",
    "launch:gui": "node src/simple-launcher.js --no-gui=false",
    "launch:system": "node src/simple-launcher.js --system-chromium",
    "launch:test": "node src/simple-launcher.js --test"
  },
  "dependencies": {
    "@azure/data-tables": "^13.3.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "puppeteer": "^24.26.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.7"
  },
  "keywords": [
    "raspberry-pi",
    "chromium",
    "veo",
    "stream"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  }
}
